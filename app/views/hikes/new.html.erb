<div class="mountains">
  <div class="container">
    <div class="logsign">
      <div class="login-card col-sm">
        <h2>Organize a hike</h2>
        <%= simple_form_for(@hike) do |f| %>
        <div class="form-inputs">
          <%= f.input :title, wrapper_html: { class:  'type' }%>
          <%= f.input :date %>
          <%= f.input :location %>
          <%= f.input :description %>
          <div class="d-flex flex-start">

            <%= f.input :duration, as: :radio_buttons, collection: Hike::DURATIONS, input_html: { class: "duration-radio-btn" } %>


            <%= f.input :level, as: :radio_buttons, collection: Hike::LEVELS, input_html: { class: "difficulty-radio-btn" } %>


            <%= f.input :terrain, as: :radio_buttons, collection: Hike::TERRAINS, input_html: { class: "terrain-radio-btn" } %>

          </div>
          <%= f.input :buddy, label: 'Extra buddies', as: :check_boxes, collection: Hike::BUDDIES, input_html: { class: "extra-buddies-checkbox" }, include_hidden: false %>
          <%= f.input :length, label: 'Length (km)', collection: 1..40, label: "Lenght (km)" %>
          <%= f.input :photos, as: :file, input_html: { multiple: true } %>
        </div>
        <div class="d-flex justify-content-center form-actions">
            <%= f.submit "New hike", class: "btn new-hike-btn" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
