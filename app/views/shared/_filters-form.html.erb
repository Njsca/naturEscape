<form class="filters-form" action="/hikes" >
    <h6 class="mt-4">Duration</h6>
  <div class="filter-category d-flex justify-content-between">
    <input type="radio" class ="duration-radio-btn" id="1 day" name="duration" value="1 day">
    <label for="1 day">1 day</label><br>
    <input type="radio" class ="duration-radio-btn" id="multiple-days" name="duration" value="multiple-days">
    <label for="multiple-days">multiple days</label>
  </div>
  <br>

    <h6>Date</h6>
  <div class="filter-category d-flex justify-content-start">
    <input type="date" class="date-selection" id="start-date" name="start_date">
  </div>
  <br>


    <h6>Extra buddies</h6>
    <div class="filter-category d-flex justify-content-between ">
      <div class="dog-friendly-wrapper">
        <input type="checkbox" class="extra-buddies-checkbox" id="dog" name="extra-buddies" value="dog">
        <label for="dog"> dogs</label>
      </div>
      <div class="kid-friendly-wrapper">
        <input type="checkbox" class="extra-buddies-checkbox" id="kid" name="extra-buddies" value="kid">
        <label for="child"> kids</label>
      </div>
    </div>
    <%# <div class="english-checkbox-wrapper d-flex flex-column">
      <p>Languages</p>
      <div>
        <input type="checkbox" class="english-checkbox" id="english" name="english" value="english">
        <label for="english"> english</label>
      </div>
    </div> %>

  <br>

  <h6>Difficulty</h6>
  <div class="filter-category d-flex justify-content-between ">
    <input type="radio" class="difficulty-radio-btn" id="beginner" name="difficulty" value="beginner">
    <label for="beginner">beginner</label><br>
    <input type="radio" class="difficulty-radio-btn" id="intermediate" name="difficulty" value="intermediate">
    <label for="intermediate">intermediate</label>
    <input type="radio" class="difficulty-radio-btn" id="expert" name="difficulty" value="expert">
    <label for="expert">expert</label>
  </div>
  <br>

  <%# <p>Length</p>
  <div class="slider">
    <input type="range" min="1" max="40" name="length" value="40" class="slider" id="length" oninput="rangeValue.innerText = this.value + ' km'">
    <p id="rangeValue"></p>
  </div>
  <br> %>

  <h6>Terrain type</h6>
  <div class="filter-category">
    <input type="radio" class="terrain-radio-btn" id="flat" name="terrain-type" value="flat">
    <label for="flat" class="terrain-type-font"><i class="fa-solid fa-minus"></i></label>
    <input type="radio" class="terrain-radio-btn" id="hills" name="terrain-type" value="hills">
    <label for="hills" class="terrain-type-font"><i class="fa-solid fa-mound"></i></label>
    <input type="radio" class="terrain-radio-btn" id="mountains" name="terrain-type" value="mountains">
    <label for="mountains" class="terrain-type-font"><i class="fa-solid fa-mountain" title="moutains"></i></label>
  </div>
  <br>

  <div class="buttons filters-buttons">
    <button type="submit" class="btn">Submit</button>
    <div class="pt-3">
      <%= link_to hikes_path do %>
        <p class="refresh-filters-link"><i class="fa-solid fa-arrow-rotate-left"></i>Refresh</p>
      <% end %>
    </div>
  </div>

</form>
